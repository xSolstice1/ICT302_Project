@model IFormFile

<div class="container content">
    <div class="import-container">
    <h2 class="mb-4">Import Data</h2>

    <form action="ProcessImport" method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="fileInput" class="form-label">Select files to upload (up to 5 files):</label>
            <input type="file" class="form-control" id="fileInput" name="file" multiple accept=".csv, .xls, .xlsx" />
        </div>

        <button type="submit" class="btn btn-primary">Upload Files</button>
    </form>

    <br /> <br /><br />

    <h2 class="mb-4">Merge Data</h2>

    <div class="mb-3">
        <label for="joinKey" class="form-label">Select a join key:</label>
        <select class="form-select" id="joinKey" name="joinKey">
            <!-- Populate options dynamically based on the CSV data -->
            <option value="column1">Column 1</option>
            <option value="column2">Column 2</option>
        </select>
    </div>
        
    <button type="button" class="btn btn-success">Merge CSV Files</button>
    
    </div>
</div>