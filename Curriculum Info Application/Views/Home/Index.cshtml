@model LoginModel
@{
    ViewData["Title"] = "Login";
}

@if (TempData["LoginErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["LoginErrorMessage"]
    </div>
}

@if (TempData["LoginSuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["LoginSuccessMessage"]
    </div>
}

@if (TempData["LoginWarningMessage"] != null)
{
    <div class="alert alert-warning">
        @TempData["LoginWarningMessage"]
    </div>
}

<div class="container content">
    <div class="row justify-content-center mt-5">
        <div class="col-md-6">
            <div class="card login-card">
                <div class="card-header">
                    <h2 class="text-center mb-4">Login</h2>
                </div>
                <div class="card-body">
                    <form asp-controller="Login" asp-action="Login" method="post">
                        <div class="mb-3">
                            <label for="login-email" class="form-label">Email</label>
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", type="email", placeholder = "Enter your email", required = "required" })
                        </div>
                        <div class="mb-3">
                            <label for="login-password" class="form-label">Password</label>
                            @Html.TextBoxFor(m => m.Password, new { @class = "form-control", type="password", placeholder = "Enter your password", required = "required" })
                        </div>
                        <button type="submit" class="btn btn-primary btn-new">Login</button>
                    </form>
                </div>
            </div>
            <div class="text-center">
                <p>Still don't have an account? <a href="javascript:void(0);" id="toggle-signup">Click here to sign up</a></p>
            </div>
        </div>
    </div>
</div>

<div class="container signup-container" style="display: none;">
    <div class="row justify-content-center mt-5">
        <div class="col-md-6">
            <div class="card login-card">
                <div class="card-header">
                    <h2 class="text-center mb-4">Sign Up</h2>
                </div>
                <div class="card-body">
                    <form asp-controller="Login" asp-action="Signup" method="post">
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", type="email", placeholder = "Enter your email", required = "required" })
                        </div>

                        <div class="mb-3">
                            <label for="signup-username" class="form-label">Username</label>
                            @Html.TextBoxFor(m => m.Username, new { @class = "form-control", type="text", placeholder = "Enter your username", required = "required" })
                        </div>

                        <div class="mb-3">
                            <label for="signup-password" class="form-label">Password</label>
                            @Html.TextBoxFor(m => m.Password, new { @class = "form-control", type="password", placeholder = "Enter your password", required = "required" })
                        </div>
                        <button type="submit" class="btn btn-primary btn-new">Sign Up</button>
                    </form>
                </div>
            </div>
            <div class="text-center">
                <p>Already have an account? <a href="javascript:void(0);" id="toggle-login">Click here to login</a></p>
            </div>
        </div>
    </div>
</div>


<script>
    document.getElementById('toggle-signup').addEventListener('click', function () {
        var loginForm = document.querySelector('.content');
        var signupForm = document.querySelector('.signup-container');

        if (loginForm.style.display !== 'none') {
            loginForm.style.display = 'none';
            signupForm.style.display = 'block';
        } else {
            loginForm.style.display = 'block';
            signupForm.style.display = 'none';
        }
    });

    document.getElementById('toggle-login').addEventListener('click', function () {
        var loginForm = document.querySelector('.content');
        var signupForm = document.querySelector('.signup-container');

        if (loginForm.style.display !== 'none') {
            loginForm.style.display = 'none';
            signupForm.style.display = 'block';
        } else {
            loginForm.style.display = 'block';
            signupForm.style.display = 'none';
        }
    });
</script>

