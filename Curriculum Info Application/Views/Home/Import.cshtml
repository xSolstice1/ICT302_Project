@model IFormFile

<div class="container content">
    <div class="import-container">
    <h2 class="mb-4">Import Data</h2>

    <form action="ProcessImport" method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="fileInput" class="form-label">Select files to upload (up to 5 files):</label>
            <input type="file" class="form-control" id="fileInput" name="file" multiple accept=".csv, .xls, .xlsx" />
        </div>

        <button type="submit" class="btn btn-primary">Upload Files</button>
    </form>
    </div>
</div>