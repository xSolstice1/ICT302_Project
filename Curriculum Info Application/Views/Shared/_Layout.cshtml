<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Curriculum Info Application</title>
    <link rel="icon" href="~/images/icon.png" type="image/x-icon" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/self.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Curriculum_Info_Application.styles.css" asp-append-version="true" />
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <script src="https://cdn.plot.ly/plotly-latest.min.js"></script>
    <style>
        /* Custom styles for the dark-themed navbar */
        .navbar {
            background-color: #333; /* Dark background color */
        }

        .navbar-brand {
            color: #fff; /* Text color for the brand */
        }

        .navbar-toggler-icon {
            background-color: #fff; /* Color for the toggle icon */
        }

        .navbar-nav .nav-item {
            padding: 10px 15px; /* Adjust the padding as needed */
        }

        .navbar-nav .nav-link {
            color: #fff; /* Text color for the links */
        }

        .navbar-nav .nav-link:hover {
            background-color: #555; /* Hover color for the links */
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/logo.png" alt="Curriculum Info Application" width="150px" />
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ml-auto">
                        @if (System.IO.File.Exists("login.json"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Dashboard">Dashboard</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Import">Import</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link"> >> </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(TempData["CurrentPage"]?.ToString() == "Merge" ? "active" : "")">Merge</a>
                            </li>
                            <li class "nav-item">
                                <a class="nav-link"> >> </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(TempData["CurrentPage"]?.ToString() == "Export" ? "active" : "")">Export</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Logout">Logout</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Login</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="footer mt-auto py-3 bg-light text-center">
        <div class="container">
            &copy; Team AThACK - 2023 - Curriculum Info Application
        </div>
    </footer>
</body>
</html>
